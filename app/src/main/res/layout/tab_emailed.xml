<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshForEmailed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.news.main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/top_image_emailed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lstNewsEmailed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_image_emailed"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
